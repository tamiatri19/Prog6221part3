<Window x:Class="RecipeManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Recipe Manager" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
            <Button Name="btnEnterRecipe" Content="Enter a new recipe" Click="btnEnterRecipe_Click" Margin="5"/>
            <Button Name="btnListRecipes" Content="List all recipes" Click="btnListRecipes_Click" Margin="5"/>
            <Button Name="btnDisplayRecipe" Content="Select a recipe to display" Click="btnDisplayRecipe_Click" Margin="5"/>
            <Button Name="btnClearData" Content="Clear all data" Click="btnClearData_Click" Margin="5"/>
        </StackPanel>
        <TextBlock Name="txtOutput" Text="" Margin="10" TextWrapping="Wrap"/>
    </Grid>
</Window>
